= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user1_id
    = f.number_field :user1_id
  .field
    = f.label :user2_id
    = f.number_field :user2_id
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
